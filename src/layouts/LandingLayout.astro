---
import PageLayout from '~/layouts/PageLayout.astro';
import Header from '~/components/widgets/Header.astro';

// Navigation data is now loaded from DatoCMS in Header component
export interface Props {
  additionalSeo?: any[];
}

const { additionalSeo } = Astro.props;
---

<PageLayout additionalSeo={additionalSeo || []}>
  <Fragment slot="announcement">
    <slot name="announcement" />
  </Fragment>
  <Fragment slot="header">
    <slot name="header">
      <Header
        actions={[
          {
            text: 'Download',
            href: 'https://github.com/onwidget/astrowind',
          },
        ]}
        showToggleTheme
        position="right"
      />
    </slot>
  </Fragment>
  <slot />
</PageLayout>
