---
import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';
import Features2 from '~/components/widgets/Features2.astro';

const metadata = {
  title: 'Design System Demo',
  description: 'Explore our collection of page templates and components',
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->
  <Hero image={{ src: '~/assets/images/hero-image.png', alt: 'Design System Demo' }}>
    <Fragment slot="title">
      Design System <span class="text-accent dark:text-white">Demo</span>
    </Fragment>

    <Fragment slot="subtitle">
      Explore our collection of static page templates showcasing different layouts and component combinations. Perfect
      for finding inspiration and understanding AstroWind's capabilities.
    </Fragment>
  </Hero>

  <!-- Features2 Widget ************** -->
  <Features2
    title="Page Templates"
    subtitle="Explore different page layouts and design patterns"
    tagline="Demo Pages"
    items={[
      {
        title: 'About Page',
        description: 'A comprehensive about page with team features, values, and company information.',
        icon: 'tabler:info-circle',
        callToAction: {
          text: 'View Demo',
          href: '/design-system/about',
        },
      },
      {
        title: 'Contact Page',
        description: 'Contact page with forms, location information, and communication options.',
        icon: 'tabler:mail',
        callToAction: {
          text: 'View Demo',
          href: '/design-system/contact',
        },
      },
      {
        title: 'Services Page',
        description: 'Services showcase with pricing, features, and service descriptions.',
        icon: 'tabler:tools',
        callToAction: {
          text: 'View Demo',
          href: '/design-system/services',
        },
      },
      {
        title: 'Pricing Page',
        description: 'Pricing tables with different plans and feature comparisons.',
        icon: 'tabler:currency-dollar',
        callToAction: {
          text: 'View Demo',
          href: '/design-system/pricing',
        },
      },
      {
        title: 'Mobile App Home',
        description: 'Landing page specifically designed for mobile app promotion.',
        icon: 'tabler:device-mobile',
        callToAction: {
          text: 'View Demo',
          href: '/design-system/homes/mobile-app',
        },
      },
      {
        title: 'Personal Portfolio',
        description: 'Personal website template for professionals and creatives.',
        icon: 'tabler:user',
        callToAction: {
          text: 'View Demo',
          href: '/design-system/homes/personal',
        },
      },
      {
        title: 'SaaS Home',
        description: 'Software as a Service landing page with feature highlights.',
        icon: 'tabler:cloud',
        callToAction: {
          text: 'View Demo',
          href: '/design-system/homes/saas',
        },
      },
      {
        title: 'Startup Home',
        description: 'Modern startup landing page with investor and team focus.',
        icon: 'tabler:rocket',
        callToAction: {
          text: 'View Demo',
          href: '/design-system/homes/startup',
        },
      },
    ]}
  />

  <!-- Landing Pages Section -->
  <Features2
    title="Landing Page Templates"
    subtitle="Specialized landing pages for different business needs"
    tagline="Landing Pages"
    items={[
      {
        title: 'Click-Through Landing',
        description: 'Optimized for directing traffic to another destination.',
        icon: 'tabler:click',
        callToAction: {
          text: 'View Demo',
          href: '/design-system/landing/click-through',
        },
      },
      {
        title: 'Lead Generation',
        description: 'Capture leads with forms and compelling call-to-actions.',
        icon: 'tabler:forms',
        callToAction: {
          text: 'View Demo',
          href: '/design-system/landing/lead-generation',
        },
      },
      {
        title: 'Pre-Launch',
        description: 'Build anticipation before your product or service launch.',
        icon: 'tabler:calendar-event',
        callToAction: {
          text: 'View Demo',
          href: '/design-system/landing/pre-launch',
        },
      },
      {
        title: 'Product Landing',
        description: 'Showcase a specific product with detailed features.',
        icon: 'tabler:package',
        callToAction: {
          text: 'View Demo',
          href: '/design-system/landing/product',
        },
      },
      {
        title: 'Sales Landing',
        description: 'Drive sales with persuasive copy and clear CTAs.',
        icon: 'tabler:chart-line',
        callToAction: {
          text: 'View Demo',
          href: '/design-system/landing/sales',
        },
      },
      {
        title: 'Subscription Landing',
        description: 'Convert visitors to subscribers with recurring plans.',
        icon: 'tabler:repeat',
        callToAction: {
          text: 'View Demo',
          href: '/design-system/landing/subscription',
        },
      },
    ]}
  />

  <!-- Blog Section -->
  <Features2
    title="Blog Templates"
    subtitle="Complete blog system with categories and tags"
    tagline="Blog System"
    items={[
      {
        title: 'Blog Home',
        description: 'Main blog page with featured posts and navigation.',
        icon: 'tabler:news',
        callToAction: {
          text: 'View Demo',
          href: '/design-system/[...blog]',
        },
      },
      {
        title: 'Category Pages',
        description: 'Browse posts by category with filtering options.',
        icon: 'tabler:category',
        callToAction: {
          text: 'View Demo',
          href: '/design-system/[...blog]/[category]',
        },
      },
      {
        title: 'Tag Pages',
        description: 'Discover content by tags and topics.',
        icon: 'tabler:tags',
        callToAction: {
          text: 'View Demo',
          href: '/design-system/[...blog]/[tag]',
        },
      },
    ]}
  />

  <!-- Legal Pages -->
  <Features2
    title="Legal & Content Pages"
    subtitle="Essential pages for compliance and information"
    tagline="Legal Pages"
    items={[
      {
        title: 'Privacy Policy',
        description: 'Template for privacy policy and data protection information.',
        icon: 'tabler:shield-check',
        callToAction: {
          text: 'View Demo',
          href: '/design-system/privacy',
        },
      },
      {
        title: 'Terms of Service',
        description: 'Terms and conditions template for your service.',
        icon: 'tabler:file-text',
        callToAction: {
          text: 'View Demo',
          href: '/design-system/terms',
        },
      },
    ]}
  />
</Layout>
